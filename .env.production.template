# Production Environment Configuration Template
# Copy this to .env and fill in your actual Azure credentials

# ===== AZURE OPENAI CONFIGURATION =====
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-actual-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4o

# ===== AZURE SPEECH SERVICE =====
AZURE_SPEECH_KEY=your-actual-speech-service-key
AZURE_SPEECH_REGION=eastus

# ===== AZURE KEY VAULT (Production) =====
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# ===== AZURE AD B2C AUTHENTICATION =====
AZURE_CLIENT_ID=your-azure-ad-client-id
AZURE_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_B2C_TENANT_NAME=your-b2c-tenant
AZURE_B2C_POLICY_NAME=B2C_1_signupsignin

# ===== FLASK PRODUCTION CONFIGURATION =====
FLASK_SECRET_KEY=your-super-secure-production-secret-key
FLASK_ENV=production
PORT=5000

# ===== VOICE CONFIGURATION =====
SARAH_VOICE=en-US-EmmaNeural
MIKE_VOICE=en-US-DavisNeural

# ===== PRODUCTION SETTINGS =====
# NEVER set these in production:
# DISABLE_AUTH_FOR_TESTING=true  # ❌ NEVER in production
# DEV_MODE=true                  # ❌ NEVER in production

# ===== OPTIONAL: AZURE STORAGE (for distributed deployment) =====
# AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string