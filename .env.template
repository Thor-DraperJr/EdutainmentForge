# EdutainmentForge Environment Configuration
# Copy this file to .env and fill in your actual values

# Azure Speech Service
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus2

# Azure OpenAI Service  
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://edutainmentforge-openai.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Voice Configuration (for multi-voice TTS)
SARAH_VOICE=en-US-EmmaNeural
MIKE_VOICE=en-US-DavisNeural

# Azure AD Configuration (for user authentication)
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id_here
AZURE_AD_CLIENT_ID=your_app_client_id_here  
AZURE_AD_CLIENT_SECRET=your_app_client_secret_here
AZURE_AD_B2C_POLICY_NAME=B2C_1_SignUpSignIn

# Flask Configuration
FLASK_SECRET_KEY=your_random_secret_key_for_sessions

# Optional: Enable debug mode for local development
FLASK_DEBUG=true
