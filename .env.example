# EdutainmentForge Configuration

# Microsoft Learn API (optional for web scraping)
MS_LEARN_API_KEY=your_ms_learn_api_key_here
MS_LEARN_BASE_URL=https://docs.microsoft.com

# Text-to-Speech Service (required)
TTS_SERVICE=azure
TTS_API_KEY=your_azure_speech_key_here
TTS_REGION=eastus
TTS_VOICE=en-US-AriaNeural

# Azure OpenAI Service (optional for AI-enhanced script generation)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# Audio Settings
AUDIO_FORMAT=mp3
AUDIO_QUALITY=high
OUTPUT_DIR=output

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
TEMP_DIR=temp
